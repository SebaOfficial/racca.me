{
    "pages": {
        "minify": true,
        "path": "@/src/pages/",
        "public_path": "@/src/public/",
        "template": "@/src/template.html",
        "distDir": "@/dist/"
    },
    "languages": {
        "path": "@/src/locales/",
        "default": "en",
        "redirectOnDefault": true
    },
    "server": {
        "address": "localhost",
        "port": null
    },
    "seo": {
        "always": true,
        "buildInPublic": false,
        "url": "https://racca.me/",
        "sitemap": {
            "structure": "sitemap-#{{lang}}.xml",
            "pages": {
                "index": {
                    "priority": 1
                },
                "404": {
                    "priority": 0
                },
                "projects": {
                    "changefreq": "weekly"
                }
            }
        },
        "robots": {
            "disallow": [
                "/en/404.html",
                "/it/404.html"
            ]
        }
    },
    "public_path": "@/src/public/",
    "global_variables": "@/src/variables.php"
}